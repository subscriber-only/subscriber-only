<%# locals: (site:) %>

<%= form_with model: site, class: "vstack gap-3" do |f| %>
  <div>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "e.g. Writing Enterprises", required: true %>
    <%= f.field_errors :name %>
  </div>
  <div>
    <%= f.label :domain, class: "form-label" %>
    <%= f.text_field :domain, class: "form-control", placeholder: "e.g. writing-enterprises.com", required: true %>
    <%= f.field_errors :domain %>
  </div>
  <div class="text-end">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
