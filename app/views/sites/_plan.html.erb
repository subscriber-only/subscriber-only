<%# locals: (site:) %>

<% if site.charges_enabled? %>
  <% unless site.payouts? %>
    <div class="alert alert-warning" role="alert">
      Your Stripe account is still being verified. If this takes longer than 1 day, please contact Stripe.
    </div>
  <% end %>
  <%= render "plans/form", plan: @site.current_plan || @site.plans.build %>
<% else %>
  <div class="text-center">
    <%= button_to(
      "Connect with Stripe",
      merchant_account_path,
      form: { "data-turbo": false },
      class: "btn btn-primary",
      disabled: !site.basic_info?
    ) %>
  </div>
<% end %>
